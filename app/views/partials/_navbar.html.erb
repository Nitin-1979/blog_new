

<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  
    <%= stylesheet_link_tag "overall", "data-turbo-track": "reload" %>
 
  </head>

<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Blog page</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <% if Current.user %>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home Feed</a>
        </li>
        
        <li class="nav-item dropdown">
          <a >
            <%= Current.user.name %>
          </a>

            <li><%= link_to "Logout", logout_path,data: {turbo_method: :delete}
            %></li>
      
        </li>
        <% end %>
      </ul>
     
    </div>
  </div>
</nav>

